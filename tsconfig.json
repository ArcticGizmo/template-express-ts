{
  "compilerOptions": {
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
